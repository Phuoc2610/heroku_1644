    transition: all 0.5s;
}
.footer__right{
    text-align: right;
}
.footer__right a{
    color: #a5a2a1;
    transition: all 0.5s;
    margin-left: 30px;
}
.footer__right a:hover{
    color: #ff6600;
    transition: all 0.5s ease;
}
